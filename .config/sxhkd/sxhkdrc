# Terminal
super + Return
    $TERMINAL
super + shift + Return
    $TERMINAL # floating?

# dmenu launcher
super + d
    dmenu_run

# lock
super + BackSpace
    slock

# refresh sxhkd
super + shift + r
    pkill -USR1 sxhkd

# MPD commands
super + p
    mpc -q toggle

super + bracket{left,right}
    mpc -q seek {-,+}10

super + shift + bracket{left,right}
    mpc -q seek {-,+}60

super + {comma,period}
    mpc {prev,next}

# ncmpcpp
super + m
    $TERMINAL -e ncmpcpp

# dwmc
super + {_,shift +} q
    dwmc {killclient,quit}

super + {_,ctrl +}{_,shift +} {1-9}
    dwmc {_,toggle}{viewex,tagex} {0-8}

super + {_,shift +} {j,k}
    dwmc {focus,move}stack {+,-}1
