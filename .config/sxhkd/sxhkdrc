# Terminal
super + Return
    $TERMINAL
super + shift + Return
    $TERMINAL # floating?

# dmenu launcher
super + d
    dmenu_run

# refresh sxhkd
super + shift + r
    pkill -USR1 sxhkd

# MPD commands
super + p
    mpc -q toggle

super + bracket{left,right}
    mpc -q seek {-,+}10

super + shift + bracket{left,right}
    mpc -q seek {-,+}60

super + {comma,period}
    mpc {prev,next}

# ncmpcpp
super + m
    $TERMINAL -e ncmpcpp